ARG BASE_IMAGE
FROM ${BASE_IMAGE}

RUN python3 -m pip install -U ultralytics
RUN python3 -m pip install -U hub_sdk
RUN python3 -m pip install -U natsort
RUN python3 -m pip install -U neptune
RUN python3 -m pip install -U tifffile
RUN python3 -m pip install -U tqdm
RUN python3 -m pip install -U shapely
RUN python3 -m pip install -U opencv-contrib-python
RUN python3 -m pip install -U azure-storage-blob

RUN echo "export PYTHONPATH=$PYTHONPATH:/root/ultralytics/" >> /root/.bashrc
RUN echo "export PYTHONPATH=$PYTHONPATH:/root/format_unifier/" >> /root/.bashrc

RUN apt-get install -y wget
RUN wget https://drive.upm.es/s/EUBO5W6IV2Aneu9/download -O /root/best_5_channels_nano.onnx
RUN wget https://drive.upm.es/s/mbvKx6QtCVP9kM4/download -O /root/best_cam0_FLIR_nano.onnx
RUN wget https://drive.upm.es/s/xlzfDJ2w5spLs3E/download -O /root/best_cam0_medium.onnx
RUN wget https://drive.upm.es/s/zt7ON0HFyM7Uc2C/download -O /root/best_cam0_nano.onnx


